<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/screenSoft"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textQuestion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="24dp"
        android:text="@string/how_do_you_feel"
        android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
        android:textColor="@color/neutralGrey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textHeadline"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="24dp"
        android:text="@string/weekly_progress"
        android:textAppearance="@style/TextAppearance.Material3.DisplaySmall"
        android:textColor="@color/screenBlueDark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textQuestion" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardActive"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        app:cardCornerRadius="32dp"
        app:cardElevation="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textHeadline">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp">

            <ImageView
                android:id="@+id/imageActiveIcon"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:contentDescription="@string/active_card_icon"
                android:src="@drawable/ic_tab_water"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textActiveTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
                app:layout_constraintEnd_toStartOf="@id/progressActive"
                app:layout_constraintStart_toEndOf="@id/imageActiveIcon"
                app:layout_constraintTop_toTopOf="@+id/imageActiveIcon"
                tools:text="Drink Water" />

            <TextView
                android:id="@+id/textActiveMessage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:textColor="@color/neutralGrey"
                app:layout_constraintEnd_toStartOf="@id/progressActive"
                app:layout_constraintStart_toEndOf="@id/imageActiveIcon"
                app:layout_constraintTop_toBottomOf="@id/textActiveTitle"
                tools:text="Hydrate with 8 glasses today" />

            <com.google.android.material.progressindicator.CircularProgressIndicator
                android:id="@+id/progressActive"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:indeterminate="false"
                android:max="100"
                app:indicatorDirectionCircular="clockwise"
                app:indicatorInset="12dp"
                app:indicatorSize="96dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:trackThickness="8dp" />

            <TextView
                android:id="@+id/textActivePercent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
                android:textColor="@color/screenBlueDark"
                app:layout_constraintBottom_toBottomOf="@id/progressActive"
                app:layout_constraintEnd_toEndOf="@id/progressActive"
                app:layout_constraintStart_toStartOf="@id/progressActive"
                app:layout_constraintTop_toTopOf="@id/progressActive"
                tools:text="75%" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/textTabLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginStart="24dp"
        android:text="@string/your_tabs"
        android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardActive" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardTab1"
        style="@style/Widget.Material3.CardView.Elevated"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginHorizontal="24dp"
        android:padding="16dp"
        app:cardCornerRadius="24dp"
        app:strokeColor="@color/screenBlueDark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textTabLabel"
        app:layout_constraintBottom_toTopOf="@id/cardTab2"
        app:layout_constraintVertical_chainStyle="spread">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/iconTab1"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginBottom="12dp"
                android:backgroundTint="@color/light_blue"
                android:text=""
                app:cornerRadius="32dp"
                app:icon="@drawable/water_drop_24dp"
                app:iconTint="@color/screenBlueDark"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textTab1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                android:textColor="@color/screenBlueDark"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/iconTab1"
                tools:text="Water" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardTab2"
        style="@style/Widget.Material3.CardView.Elevated"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginHorizontal="24dp"
        android:padding="16dp"
        app:cardCornerRadius="24dp"
        app:strokeColor="@color/screenBlueDark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardTab1"
        app:layout_constraintBottom_toTopOf="@id/cardTab3">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/iconTab2"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginBottom="12dp"
                android:backgroundTint="@color/light_blue"
                android:text=""
                app:cornerRadius="32dp"
                app:icon="@drawable/book_24dp"
                app:iconTint="@color/screenBlueDark"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textTab2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                android:textColor="@color/screenBlueDark"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/iconTab2"
                tools:text="Study" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardTab3"
        style="@style/Widget.Material3.CardView.Elevated"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginHorizontal="24dp"
        android:padding="16dp"
        app:cardCornerRadius="24dp"
        app:strokeColor="@color/screenBlueDark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardTab2"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/iconTab3"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginBottom="12dp"
                android:backgroundTint="@color/light_blue"
                android:text=""
                app:cornerRadius="32dp"
                app:icon="@drawable/self_improvement_24dp"
                app:iconTint="@color/screenBlueDark"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textTab3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                android:textColor="@color/screenBlueDark"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/iconTab3"
                tools:text="Meditate" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>